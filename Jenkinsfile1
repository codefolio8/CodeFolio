pipeline {
    agent any

    options {
        timeout(time: 5, unit: 'MINUTES')
        buildDiscarder(logRotator(numToKeepStr: '10'))
    }

    triggers {
        pollSCM('H 2 * * *') // Poll once a day around 2 AM
    }

    environment {
        REPO_URL = 'https://github.com/codefolio8/CodeFolio.git'
        GIT_CREDENTIALS = 'Jenkins-CI'
    }

    stages {

        stage('Clone Repository') {
            steps {
                echo "Cloning repository from ${REPO_URL}"
                git branch: 'develop', url: "${REPO_URL}", credentialsId: "${GIT_CREDENTIALS}"
            }
        }

        stage('Merge develop → production) {
            steps {
                echo "Merging 'develop' branch into 'main'..."
                bat """
                    git config user.email "jenkins@ci.local"
                    git config user.name "Jenkins CI"
                    git fetch origin
                    git checkout main
                    git merge origin/develop --no-edit
                    git push origin main
                """
                echo "Merge completed successfully!"
            }
        }

        stage('Simulated Deployment') {
            steps {
                echo "Simulating deployment to production..."
                echo "Production server would be updated here."
            }
        }
    }

    post {
        success {
            echo 'Continuous Deployment simulation succeeded — develop merged into prod!'
        }
        failure {
            echo 'CD simulation failed. '
        }
    }
}
